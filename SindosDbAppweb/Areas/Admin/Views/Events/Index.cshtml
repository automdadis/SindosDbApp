@model IEnumerable<SindosDbAppweb.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ΛΙΣΤΑ ΕΚΔΗΛΩΣΕΩΝ</h2>
        </div>
        <div class="col-6 text-end pb-2">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i>ΠΡΟΣΘΗΚΗ ΕΚΔΗΛΩΣΗΣ</a>
        </div>
    </div>
</div>
<table id="tblDataEvent" class="table align-content-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hmnia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abroad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sxolia)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hmnia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abroad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sxolia)
            </td>
                <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a></td>
                <td><a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-arrow-up-right-square"></i></a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a></td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
    <script src="~/js/Event.js"></script>
}